<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yoshi.decisivealert">
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo4"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Settings"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".SetContacts"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".CustomContactsSample"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".AlertOutCall" android:theme="@style/Theme.Transparent" android:label="@string/app_name"></activity>

        <activity android:name=".Alert" android:theme="@style/Theme.Transparent" android:label="@string/app_name"></activity>
        <receiver android:name=".PhoneStateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.NEW_OUTGOING_CALL"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.media.RINGER_MODE_CHANGED"></action>
            </intent-filter>
        </receiver>


    </application>

</manifest>