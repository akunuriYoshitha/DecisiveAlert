<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.yoshi.decisivealert.Settings">


    <TextView
        android:text="Allow calls from : "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:id="@+id/calls1" />

    <TextView
        android:text=" > "
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/calls1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/calls2" />

    <TextView
        android:text="Allow messages from : "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/msg1"
        android:layout_below="@+id/calls1"
        android:layout_alignLeft="@+id/calls1"
        android:layout_alignStart="@+id/calls1" />

    <TextView
        android:text=" > "
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msg2"
        android:layout_alignTop="@+id/msg1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="After how many calls would you like to allow ?"
        android:textSize="20dp"
        android:layout_width="280dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg1"
        android:layout_alignLeft="@+id/msg1"
        android:layout_alignStart="@+id/msg1"
        android:layout_marginTop="17dp"
        android:id="@+id/numCalls1" />

    <TextView
        android:text=" > "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numCalls2"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/numCalls1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Send an SMS"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/sms"
        android:layout_below="@+id/numCalls1"
        android:layout_alignLeft="@+id/numCalls1"
        android:layout_alignStart="@+id/numCalls1"
        android:layout_marginTop="13dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:textSize="20dp"
        android:switchMinWidth="50dp"
        android:id="@+id/sms_switch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sms" />



    <TextView
        android:text="Give your message : "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/sms"
        android:layout_alignLeft="@+id/sms"
        android:layout_alignStart="@+id/sms"
        android:layout_marginTop="12dp"
        android:id="@+id/usermsg1" />

    <TextView
        android:text="nobody"
        android:textSize="20dp"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calls2"
        android:layout_toLeftOf="@+id/calls2"
        android:layout_toStartOf="@+id/calls2"
        android:id="@+id/calls3" />

    <TextView
        android:text="nobody"
        android:textSize="20dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/msg2"
        android:layout_toLeftOf="@+id/msg2"
        android:layout_toStartOf="@+id/msg2"
        android:id="@+id/msg3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Busy!!! Please call later..."
        android:textSize="18dp"
        android:textColor="#ff1a75"
        android:ems="10"
        android:id="@+id/smsText"
        android:gravity="bottom"
        android:layout_alignTop="@+id/usermsg1"
        android:layout_alignLeft="@+id/usermsg1"
        android:layout_alignStart="@+id/usermsg1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/usermsg1" />
</RelativeLayout>
